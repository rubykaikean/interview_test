<h1>Listing drawings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Drawing</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @drawings.each do |drawing| %>
      <tr>
        <td><%= drawing.name %></td>
        <td><%= image_tag drawing.photo.url %></td>
        <td><%= link_to "screenshot", screenshot_drawings_path %></td>
        <td><%= link_to 'Show', drawing %></td>
        <td><%= link_to 'Edit', edit_drawing_path(drawing) %></td>
        <td><%= link_to 'Destroy', drawing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drawing', new_drawing_path %>
